# ===========================================
# Game Haven Configuration Template
# ===========================================
# Run: ./deploy.sh setup (interactive wizard)
# Or: copy to .env and fill in values manually
# ===========================================

###################################
# Site Branding
###################################
VITE_SITE_NAME="Game Haven"
VITE_SITE_DESCRIPTION="Browse and discover our collection of board games"
VITE_SITE_AUTHOR="Game Haven"

###################################
# URLs
###################################
SITE_URL=http://localhost
API_EXTERNAL_URL=http://localhost:8000

###################################
# Supabase Connection
###################################
# For external Supabase (Cloud or existing instance):
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJ...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# For self-hosted Supabase (generated by wizard):
# POSTGRES_PASSWORD=<generated>
# JWT_SECRET=<generated>
# ANON_KEY=<generated>
# SERVICE_ROLE_KEY=<generated>

###################################
# Feature Flags
###################################
# Enable/disable features at deployment time
# These can also be toggled in the admin panel
VITE_FEATURE_PLAY_LOGS=true
VITE_FEATURE_WISHLIST=true
VITE_FEATURE_FOR_SALE=true
VITE_FEATURE_MESSAGING=true
VITE_FEATURE_COMING_SOON=true
VITE_FEATURE_DEMO_MODE=false

###################################
# Security
###################################
# 32-byte hex key for encrypting personal data
# Generate with: openssl rand -hex 32
PII_ENCRYPTION_KEY=

###################################
# Email (SMTP) - Optional
###################################
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

###################################
# Anti-Spam - Optional
###################################
# Cloudflare Turnstile secret key
TURNSTILE_SECRET_KEY=

###################################
# Import Features - Optional
###################################
# Firecrawl API for BoardGameGeek import
FIRECRAWL_API_KEY=

###################################
# Ports (self-hosted only)
###################################
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
KONG_HTTP_PORT=8000
STUDIO_PORT=3000
POSTGRES_PORT=5432
